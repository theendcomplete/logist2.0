<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="classes.Driver" table="drivers">
        <id column="driver_ID" name="driver_ID" type="java.lang.Long">
            <generator class="increment"/>
        </id>
        <property name="name" column="name" type="java.lang.String"/>
        <set name="car" cascade="all" lazy="false" inverse="true">
            <key/>
            <one-to-many class="classes.Car"/>
        </set>
        <set name="orders" cascade="all" lazy="false" inverse="true">
            <key/>
            <one-to-many class="classes.Order"/>
        </set>

