<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="classes.Order" table="orders">
        <id column="order_ID" name="order_ID" type="java.lang.Long">
            <generator class="increment"/>
        </id>
        <property column="address" name="address" type="java.lang.String"/>
        <property column="target" name="target" type="java.lang.Integer"/>
        <property column="startDate" name="startDate" type="java.util.Date"/>
        <property column="endDate" name="endDate" type="java.util.Date"/>
        <property column="image" name="image" type="binary"/>
        <many-to-one name="user" class="classes.User"/>
        <many-to-one name="driver" cascade="all" lazy="false" class="classes.Driver"/>


        <set name="Cargo" cascade="all-delete-orphan">
            <key/>
            <many-to-many class="classes.Cargo"/>
        </set>
        <set name="contractor" cascade="all" lazy="extra" inverse="true">
            <key/>
            <one-to-many class="classes.Contractor"/>
        </set>
        <set name="transportCompany" cascade="all" lazy="extra" inverse="true">
            <key/>
            <one-to-many class="classes.TransportCompany"/>
        </set>
        <set name="contact" cascade="all" lazy="extra" inverse="true">
            <key/>
            <one-to-many class="classes.Contact"/>
        </set>


    </class>
</hibernate-mapping>