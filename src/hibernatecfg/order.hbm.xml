<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="classes.Order" table="orders">
        <id column="order_ID" name="order_ID" type="java.lang.Long">
            <generator class="increment"/>
        </id>
        <property column="address" name="address" type="java.lang.String"/>
        <property column="target" name="target" type="java.lang.Integer"/>
        <property column="startDate" name="startDate" type="java.util.Date"/>
        <property column="endDate" name="endDate" type="java.util.Date"/>
        <property column="image" name="image" type="binary"/>


        <set name="user" table="users" lazy="false">
            <key column="user_ID"/>
            <many-to-many column="user_ID" class="classes.User"/>
        </set>

        <set name="driver" table="drivers" lazy="false">
            <key column="driver_ID"/>
            <many-to-many column="driver_ID" class="classes.Driver"/>
        </set>

        <set name="transportCompany" table="transport_companies" lazy="false">
            <key column="tc_ID"/>
            <many-to-many column="tc_ID" class="classes.TransportCompany"/>
            <!--<many-to-many class="classes.TransportCompany"/>-->
        </set>

        <set name="contact" table="contacts" lazy="false">
            <key column="contact_ID"/>
            <many-to-many column="contact_ID" class="classes.Contact"/>
        </set>

        <set name="cargo" table="cargos" lazy="false">
            <key column="cargo_ID"/>
            <many-to-many column="cargo_ID" class="classes.Cargo"/>
        </set>

        <set name="contractor" table="contractor" lazy="false">
            <key column="contractor_ID"/>
            <many-to-many column="contractor_ID" class="classes.Contractor"/>
        </set>


    </class>
</hibernate-mapping>